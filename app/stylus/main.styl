@import 'import/variables'
@import 'import/utils'


html,
button,
input,
select,
textarea
  color: main-color

body
  background: bg
  font: p-weight p-size/p-line-height p-font

::-moz-selection,
::-webkit-selection,
::selection,
  background: selection-color
  text-shadow: none

hr
  border: 0
  border-top: 1px solid footer-border-color
  display: block
  height: 1px
  margin: 1em 0
  padding: 0

img
  display: block
  margin: 0 auto
  vertical-align: middle
  max-width: 100%

a
  text-decoration: none
  transition(color color-transition-time ease-out)
  color: a-color

  &:hover
    color: a-hover-color

fieldset
  border: 0
  margin: 0
  padding: 0

textarea
  resize: vertical

.wrapper
  margin: 0 5%
  width: 90%

.header-container
  padding: 2em 0 0.4em 0
  background: primary-header-bg

.nav-container
  padding: 0.4em
  background: secondary-header-bg

.header-container,
.nav-container
  font-family: h-font
  font-weight: h-weight

  a
    color: main-color
    padding: 12px 0

    &:hover
      color: a-hover-color

.main-container
  .wrapper
    padding-top: 2.5em

  h1
    font-size: p-size*1.5
    line-height: p-line-height
    font-weight: p-weight

  h2
    font-size: p-size*1.1
    line-height: p-line-height
    font-weight: p-weight


.footer-container,
.main aside
  border-top: 1px solid footer-border-color
  font-size: 0.6em
  line-height: 2em
  a
    color: inherit
    text-decoration: none
    transition(color color-transition-time ease-out)

    &:hover
      color: selection-color

// Menu

nav
  ul
    margin: 0
    padding: 0

  li
    margin-top 0.32em

    &:first-of-type
      margin-left: 0

  a
    padding: 15px 0
    text-align: left

// Main

.main
  line-height: 1.6em
  padding: 30px 0 100px 0

  aside
    padding: 0px 5% 10px

  section
    margin-bottom: 30px

  ul
    // list-style: none
    padding-left: 0

  li
    margin-bottom: 10px

    &:last-child
      margin-bottom: 0

  li a
    text-decoration: none

// Footer

footer
  padding: 0

.footer-left
  display: none
  color: footer-border-color

  
.footer-center
  float: left

.footer-right
  float: right


// Media, helper classes should come after everything else.
@import 'import/fixes'
@import 'import/screen'
@import 'import/helper'
@import 'import/print'
